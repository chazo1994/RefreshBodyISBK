<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_drink_intake_item"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/cup_one"/>
    <TextView
        android:id="@+id/tv_name_drink_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/colorPrimary"
        android:text="water"
        android:layout_toRightOf="@id/img_drink_intake_item"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_drink_amount_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/colorPrimary"
        android:text="100ml"
        android:layout_toRightOf="@id/tv_name_drink_item"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_time_drink_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_15sdp"
        android:textColor="@color/colorPrimary"
        android:layout_centerVertical="true"/>
</RelativeLayout>